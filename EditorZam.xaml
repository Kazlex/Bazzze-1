<Window x:Class="Bazzze.EditorZam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bazzze"
        mc:Ignorable="d"
        Title="EditorZam" Height="450" Width="800" FontSize="33">
    <UniformGrid Columns="2">
        <Label>Naziv:</Label>
        <TextBox Text="{Binding Path=Naziv, UpdateSourceTrigger=Explicit}" />
        <Button Click="Otkazi">Otkazivaj</Button>
        <Button Click="OK">Okejisi</Button>
    </UniformGrid>
</Window>